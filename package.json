    "start": "bun run src/index.js",
    "dev": "bun run src/index.js ./test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AnEntrypoint/mcp-glootie.git"
  },
  "keywords": [
    "mcp",
    "code-execution",
    "javascript",
    "typescript",
